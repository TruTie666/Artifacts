name: Descargar Im치genes Docker de docker-compose

on:
  workflow_dispatch:
    inputs:
      compose_path:
        description: 'Ruta del archivo docker-compose.yml'
        required: false
        default: './docker-compose.yml'

jobs:
  download-images:
    runs-on: ubuntu-latest
    steps:
      - name: Clonar el repositorio
        uses: actions/checkout@v3

      - name: Instalar yq para parsear YAML
        run: sudo apt-get install -y yq

      - name: Extraer im치genes del docker-compose
        id: parse
        run: |
          compose_path="${{ github.event.inputs.compose_path }}"
          yq e '.services[].image' "$compose_path" > images.txt

      - name: Descargar im치genes
        run: |
          mkdir -p images
          while IFS= read -r image; do
            image=$(echo "$image" | xargs)
            echo "Descargando $image"
            docker pull "$image"
            filename=$(echo "$image" | tr '/' '_' | tr ':' '_').tar.gz
            echo "Guardando $image en ./images/$filename"
            docker save "$image" | gzip > "./images/$filename"
          done < images.txt

      - name: Subir archivos de im치genes
        uses: actions/upload-artifact@v4
        with:
          name: docker-images
          path: ./images
